{% extends 'FrontendBundle:Layouts:1column.html.twig' %}

{% block title %}{{ 'MOVERS by FUE'|trans }}{% endblock %}
{% block description %}{{''|trans}}{% endblock %}
{% block sectionclass %}home page{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <section id="banner-top">
        <div class="container">
            <div class="row">
                <div class="col-md-12 wrapper">
                    <h3>Be a <strong class="red">MOVER</strong></h3>
                    <h3><strong class="red">MOVE</strong> the world</h3>
                </div>
            </div>
        </div>
    </section>

    {% if posts | length > 0 %}
    {% set firstPost = posts[0] %}
    <section id="post-home">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <article class="card">
                        <div class="row">
                            <div class="col-md-6 sidenav">
                                {% set path = firstPost.imageMain.imagePostCarousel.getWebFilePath ~ '?' ~ random() %}
                                <img class="img-responsive pull-left" src="{{ asset(path) }}" alt="{{ firstPost.imageMain.description }}" />
                                <span class="date">{{ firstPost.created | date("F jS \\a\\t g:ia") }}</span>
                                <span class="social-buttons">
                                    <a class="" href=""><i class="fa fa-twitter"></i> Twitter</a>
                                    <a class="" href=""><i class="fa fa-facebook"></i> Facebook</a>
                                    <a class="" href=""><i class="fa fa-linkedin"></i> LinkedIn</a>
                                </span>
                                {{ render(controller('BlogBundle:Blog:tagCloud')) }}
                            </div>
                            <div class="col-md-6">
                                <h1>
                                    {{ firstPost.title }}
                                </h1>
                                <h2 class="subtitle">
                                    {{ firstPost.subtitle | raw }}
                                </h2>

                                <section class="post-body">
                                    {{ firstPost.body | raw }}
                                </section>

                                <footer>
                                    <div class="tags">
                                        <ul class="list-unstyled">
                                            {% for tag in firstPost.tags %}
                                                <li><a href="#view-post-of-tag" title="{{ 'View related posts' | trans }}">{{ tag }}</a></li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </footer>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </section>

    <section id="blog">
        <div class="container">
            <div class="row">
                {% for i in 1..3 %}
                {% if posts[i] is defined %}
                    {{ render(controller("BlogBundle:Blog:postCard", {'post': posts[i]})) }}
                {% endif %}
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        var ScrollSpy = {
            firstSection: null,
            offset: 60,
            target: null,

            init: function(target) {
                this.firstSection = document.querySelector('section:not(#banner-top)');
                this.target = target;
                if (!this.firstSection) {
                    return;
                }
                this.addEventListeners();
            },

            addEventListeners: function() {
                document.addEventListener('scroll', function(evt) {
                   var scrollY = this.getScrollY();
                   if (this.firstSection.offsetTop - this.offset < scrollY) {
                       if (!this.target.classList.contains('navbar-opaque'))
                           this.target.classList.add('navbar-opaque');
                   } else {
                       if (this.target.classList.contains('navbar-opaque'))
                           this.target.classList.remove('navbar-opaque');
                   }
                }.bind(this));
            },

            getScrollY: function() {
                var  scrOfY = 0;
                if(typeof(window.pageYOffset) === 'number') {
                    //Netscape compliant
                    scrOfY = window.pageYOffset;
                } else if(document.body && document.body.scrollTop)  {
                    //DOM compliant
                    scrOfY = document.body.scrollTop;
                }

                return scrOfY;
            }
        };

        ScrollSpy.init(document.querySelector('nav.mover-navbar'));
    </script>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}