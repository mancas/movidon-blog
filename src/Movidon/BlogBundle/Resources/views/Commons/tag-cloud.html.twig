{% if tags | length > 0 %}
<div class="tags-cloud">
    <h3>{{ 'Tags' | trans }}</h3>
    <ul>
        {% for tag in tags %}
            <li class="tag{{ tag.value }}">
                <a href="{{ path('blog_view_post_by_tag', {'slug': tag.slug}) }}" title="">{{ tag.name }}</a>
            </li>
        {% endfor %}
    </ul>
</div>
{% endif %}