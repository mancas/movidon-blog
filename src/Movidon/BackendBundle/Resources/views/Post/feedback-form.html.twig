<div class="row">
    <div class="col-md-12">
        <div class="card-item card-amber feedback-card">
            <div class="card-title">
                <h2>
                    {{ 'Your feedback' | trans }}
                </h2>

                <h3>
                    {{ 'Feel free to give your opinion about this post' | trans }}
                </h3>
            </div>
            <div class="card-description no-padding">
                <div class="row feedback-buttons">
                    <div class="col-md-12">
                        <div class="big-btn" data-feedback="positive">
                            <div class="wrapper">
                                <i class="fa fa-thumbs-up feedback-positive"></i>
                            </div>
                        </div>

                        <div class="big-btn" data-feedback="negative">
                            <div class="wrapper">
                                <i class="fa fa-thumbs-down feedback-negative"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row card-padding mt1 feedback-form hidden">
                    <div class="col-md-12">
                        <form class="" action="{{ path('admin_post_send_feedback', {'slug': post.slug}) }}" method="post">
                            <div class="form-group">
                                <div class="line">
                                    <textarea name="post_feedback[feedback]" class="form-control" placeholder="{{ 'Type your comments here...' }}" rows="5"></textarea>
                                </div>
                            </div>

                            <input class="hidden" type="radio" name="post_feedback[type]" value="positive" />
                            <input class="hidden" type="radio" name="post_feedback[type]" value="negative" />

                            <div class="mt1">
                                <button type="submit" class="btn btn-blue">{{ 'Save' | trans }}</button>
                                <button type="reset" class="btn btn-default borderless cancel">{{ 'Cancel' | trans }}</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>