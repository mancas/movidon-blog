<div class="pbb-view">
    <dl class="dl-horizontal">
        <dt>
            {{ 'Email' | trans }}
        </dt>
        <dd>
            {% if user.email %}<i class="fa fa-envelope"></i>{{ user.email }}{% endif %}
        </dd>
    </dl>

    <dl class="dl-horizontal">
        <dt>
            {{ 'Twitter' | trans }}
        </dt>
        <dd>
            {% if user.twitter %}<i class="fa fa-at"></i>{{ user.twitter }}{% endif %}
        </dd>
    </dl>

    <dl class="dl-horizontal">
        <dt>
            {{ 'Website' | trans }}
        </dt>
        <dd>
            {% if user.website %}{{ user.website }}{% endif %}
        </dd>
    </dl>
</div>

<div class="pbb-edit">
    <form action="" method="post">
        <dl class="dl-horizontal">
            <dt>
                {{ 'Email' | trans }}
            </dt>
            <dd>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-envelope"></i>
                        </span>
                        <div class="line">
                            <input class="form-control" type="text" id="admin_user_profile_email" value="{% if user.email %}{{ user.email }}{% endif %}" placeholder="{{ 'Your email...' | trans }}" />
                        </div>
                    </div>
                </div>
            </dd>
        </dl>

        <dl class="dl-horizontal">
            <dt>
                {{ 'Twitter' | trans }}
            </dt>
            <dd>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-at"></i>
                        </span>
                        <div class="line">
                            <input class="form-control" type="text" id="admin_user_profile_twitter" value="{% if user.twitter %}{{ user.twitter }}{% endif %}" placeholder="{{ 'Your twitter username...' | trans }}" />
                        </div>
                    </div>
                </div>
            </dd>
        </dl>

        <dl class="dl-horizontal">
            <dt>
                {{ 'Website' | trans }}
            </dt>
            <dd>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-desktop"></i>
                        </span>
                        <div class="line">
                            <input class="form-control" type="text" id="admin_user_profile_website" value="{% if user.website %}{{ user.website }}{% endif %}" placeholder="{{ 'Your website url...' | trans }}" />
                        </div>
                    </div>
                </div>
            </dd>
        </dl>

        <div class="mt1">
            <button type="submit" class="btn btn-blue">{{ 'Save' | trans }}</button>
            <button type="button" class="btn btn-default borderless cancel">{{ 'Cancel' | trans }}</button>
        </div>
    </form>
</div>